---
import { getCollection } from 'astro:content';
import ToolLayout from '../../../layouts/ToolLayout.astro';
import DiscountCalculator from '../../../components/calculators/finance/DiscountCalculator';

const lang = 'ko';

const allTools = await getCollection('tools');
const toolEntry = allTools.find(
  (t) => t.data.id === 'discount-calculator' && t.id.startsWith('ko/')
);

if (!toolEntry) {
  return Astro.redirect('/ko/');
}

const tool = toolEntry.data;
---

<ToolLayout tool={tool} lang={lang}>
  <DiscountCalculator client:visible defaults={tool.defaults} lang={lang} />
</ToolLayout>
