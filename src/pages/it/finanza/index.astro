---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'it';

const tools = [
  { name: 'Calcolo Mutuo', slug: '/it/finanza/calcolo-mutuo/', description: 'Calcola la rata mensile del mutuo, gli interessi totali e confronta diverse durate.' },
  { name: 'Interesse Composto', slug: '/it/finanza/calcolo-interesse-composto/', description: 'Scopri come cresce il tuo capitale con l\'interesse composto nel tempo.' },
  { name: 'Calcolo Prestito', slug: '/it/finanza/calcolo-prestito/', description: 'Calcola la rata del prestito personale, gli interessi e il piano di ammortamento.' },
  { name: 'Calcolo Risparmio', slug: '/it/finanza/calcolo-risparmio/', description: 'Pianifica i tuoi risparmi e scopri come crescono con depositi regolari e interessi.' },
];
---

<BaseLayout
  title="Calcolatori Finanziari - Mutuo, Prestito, Risparmio | CalcHub"
  description="Calcolatori finanziari gratuiti: mutuo, prestito personale, interesse composto, piano di risparmio. Risultati istantanei e precisi."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/it/" class="hover:text-blue-600">Home</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">Finanza</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Calcolatori Finanziari</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      Strumenti finanziari precisi per mutui, prestiti, investimenti e risparmio. Confronta scenari diversi e prendi decisioni informate sulle tue finanze.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
