---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'fr';

const tools = [
  { name: 'Simulateur Crédit Immobilier', slug: '/fr/finances/simulateur-credit-immobilier/', description: 'Calculez la mensualité de votre crédit immobilier, les intérêts totaux et comparez les durées.' },
  { name: 'Intérêts Composés', slug: '/fr/finances/calcul-interets-composes/', description: 'Découvrez comment votre capital évolue grâce aux intérêts composés au fil du temps.' },
  { name: 'Calcul Prêt Personnel', slug: '/fr/finances/calcul-pret-personnel/', description: 'Calculez la mensualité de votre prêt, les intérêts et le tableau d\'amortissement.' },
  { name: 'Calcul Épargne', slug: '/fr/finances/calcul-epargne/', description: 'Planifiez votre épargne et découvrez son évolution avec des versements réguliers et les intérêts.' },
];
---

<BaseLayout
  title="Calculatrices Financières - Crédit, Prêt, Épargne | CalcHub"
  description="Calculatrices financières gratuites : crédit immobilier, prêt personnel, intérêts composés, plan d'épargne. Résultats instantanés et précis."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/fr/" class="hover:text-blue-600">Accueil</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">Finances</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Calculatrices Financières</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      Outils financiers précis pour le crédit immobilier, les prêts, les investissements et l'épargne. Comparez différents scénarios et prenez des décisions éclairées sur vos finances.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
