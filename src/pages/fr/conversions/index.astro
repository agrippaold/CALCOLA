---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'fr';

const tools = [
  { name: 'Convertisseur Température', slug: '/fr/conversions/convertisseur-temperature/', description: 'Convertissez entre Celsius, Fahrenheit et Kelvin avec des points de référence.' },
];
---

<BaseLayout
  title="Convertisseurs d'Unités - Température, Longueur, Poids | CalcHub"
  description="Convertisseurs d'unités gratuits pour la température, la longueur, le poids et le volume. Convertissez entre système métrique et impérial en un instant."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/fr/" class="hover:text-blue-600">Accueil</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">Conversions</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Convertisseurs d'Unités</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      Convertissez entre différentes unités de mesure de façon rapide et précise. Température, longueur, poids, volume et bien plus.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
