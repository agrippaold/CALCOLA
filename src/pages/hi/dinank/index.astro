---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'hi';

const tools = [
  { name: 'आयु कैलकुलेटर', slug: '/hi/dinank/aayu-calculator/', description: 'जन्म तिथि से अपनी सटीक आयु वर्ष, माह और दिनों में जानें।' },
  { name: 'दिनांक अंतर कैलकुलेटर', slug: '/hi/dinank/dinank-antar-calculator/', description: 'दो तिथियों के बीच दिन, सप्ताह, माह और वर्षों का अंतर ज्ञात करें।' },
];
---

<BaseLayout
  title="दिनांक कैलकुलेटर - आयु और दिनांक अंतर | CalcHub"
  description="मुफ्त दिनांक कैलकुलेटर: आयु गणना, दो तिथियों के बीच अंतर। सटीक और तेज़।"
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/hi/" class="hover:text-blue-600">होम</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">दिनांक</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">दिनांक और समय कैलकुलेटर</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      आयु गणना और तिथि अंतर के लिए उपकरण। सटीक दिन, सप्ताह, माह और वर्ष गणना।
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
