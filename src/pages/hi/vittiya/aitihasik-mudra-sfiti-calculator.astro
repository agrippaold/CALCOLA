---
import { getCollection } from 'astro:content';
import ToolLayout from '../../../layouts/ToolLayout.astro';
import HistoricalInflationCalculator from '../../../components/calculators/finance/HistoricalInflationCalculator';

const lang = 'hi';

const allTools = await getCollection('tools');
const toolEntry = allTools.find(
  (t) => t.data.id === 'historical-inflation-calculator' && t.id.startsWith('hi/')
);

if (!toolEntry) {
  return Astro.redirect('/hi/');
}

const tool = toolEntry.data;
---

<ToolLayout tool={tool} lang={lang}>
  <HistoricalInflationCalculator client:visible defaults={tool.defaults} lang={lang} />
</ToolLayout>
