---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'hi';

const tools = [
  { name: 'GPA कैलकुलेटर', slug: '/hi/shiksha/gpa-calculator/', description: 'अपने ग्रेड और क्रेडिट घंटों से GPA की गणना करें।' },
];
---

<BaseLayout
  title="शिक्षा कैलकुलेटर - GPA गणना | CalcHub"
  description="मुफ्त शिक्षा कैलकुलेटर: GPA गणना और शैक्षणिक उपकरण। सटीक और तेज़।"
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/hi/" class="hover:text-blue-600">होम</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">शिक्षा</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">शिक्षा कैलकुलेटर</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      GPA गणना और अन्य शैक्षणिक उपकरण। अपने शैक्षणिक प्रदर्शन को ट्रैक करें।
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
