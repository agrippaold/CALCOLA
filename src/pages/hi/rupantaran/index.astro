---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'hi';

const tools = [
  { name: 'तापमान परिवर्तक', slug: '/hi/rupantaran/taapman-parivartrak/', description: 'सेल्सियस, फ़ारेनहाइट और केल्विन के बीच तापमान रूपांतरण।' },
  { name: 'आयतन परिवर्तक', slug: '/hi/rupantaran/aayatan-parivartrak/', description: 'लीटर, गैलन, कप और अन्य आयतन इकाइयों के बीच रूपांतरण।' },
  { name: 'लंबाई परिवर्तक', slug: '/hi/rupantaran/lambai-parivartrak/', description: 'मीटर, फीट, इंच, किलोमीटर और अन्य लंबाई इकाइयों का रूपांतरण।' },
  { name: 'वजन परिवर्तक', slug: '/hi/rupantaran/vajan-parivartrak/', description: 'किलोग्राम, पाउंड, ग्राम और अन्य वजन इकाइयों का रूपांतरण।' },
];
---

<BaseLayout
  title="रूपांतरण उपकरण - तापमान, आयतन, लंबाई | CalcHub"
  description="मुफ्त रूपांतरण उपकरण: तापमान, आयतन, लंबाई, वजन। सटीक इकाई रूपांतरण तुरंत।"
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/hi/" class="hover:text-blue-600">होम</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">रूपांतरण</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">रूपांतरण उपकरण</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      तापमान, आयतन, लंबाई और वजन के लिए तेज़ और सटीक इकाई रूपांतरण उपकरण।
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
