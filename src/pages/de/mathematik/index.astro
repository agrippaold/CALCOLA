---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'de';

const tools = [
  { name: 'Prozentrechner', slug: '/de/mathematik/prozentrechner/', description: 'Fünf Berechnungsmodi: Prozentwert finden, Veränderung, Erhöhung und Verminderung berechnen.' },
  { name: 'Flächenrechner', slug: '/de/mathematik/flaechenrechner/', description: 'Berechnen Sie die Fläche von Rechtecken, Kreisen, Dreiecken, Trapezen und Ellipsen.' },
];
---

<BaseLayout
  title="Mathematik-Rechner - Prozent, Fläche & Mehr | CalcHub"
  description="Kostenlose Mathematik-Rechner für Prozentrechnung, Flächenberechnung und alltägliche Rechenaufgaben. Sofortige Ergebnisse mit Schritt-für-Schritt-Formeln."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/de/" class="hover:text-blue-600">Startseite</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">Mathematik</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Mathematik-Rechner</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      Schnelle und zuverlässige Mathematik-Tools für alltägliche Berechnungen. Prozentrechnung, Geometrie und vieles mehr.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
