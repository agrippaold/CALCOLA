---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'de';

const tools = [
  { name: 'Baufinanzierung Rechner', slug: '/de/finanzen/baufinanzierung-rechner/', description: 'Berechnen Sie die monatliche Rate Ihrer Baufinanzierung, die Gesamtzinsen und vergleichen Sie Laufzeiten.' },
  { name: 'Zinseszinsrechner', slug: '/de/finanzen/zinseszinsrechner/', description: 'Erfahren Sie, wie Ihr Kapital durch den Zinseszins-Effekt über die Zeit wächst.' },
  { name: 'Kreditrechner', slug: '/de/finanzen/kreditrechner/', description: 'Berechnen Sie die Monatsrate Ihres Ratenkredits, die Zinsen und den Tilgungsplan.' },
  { name: 'Sparrechner', slug: '/de/finanzen/sparrechner/', description: 'Planen Sie Ihr Sparziel und sehen Sie, wie regelmäßige Einzahlungen mit Zinsen wachsen.' },
];
---

<BaseLayout
  title="Finanzrechner - Baufinanzierung, Kredit, Sparen | CalcHub"
  description="Kostenlose Finanzrechner: Baufinanzierung, Ratenkredit, Zinseszins, Sparplan. Sofortige und genaue Ergebnisse."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/de/" class="hover:text-blue-600">Startseite</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">Finanzen</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Finanzrechner</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      Präzise Finanztools für Baufinanzierung, Ratenkredite, Geldanlagen und Sparpläne. Vergleichen Sie verschiedene Szenarien und treffen Sie fundierte Finanzentscheidungen.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
