---
import { getCollection } from 'astro:content';
import ToolLayout from '../../../layouts/ToolLayout.astro';
import MortgageCalculator from '../../../components/calculators/finance/MortgageCalculator';

const lang = 'es';

const allTools = await getCollection('tools');
const toolEntry = allTools.find(
  (t) => t.data.id === 'mortgage-calculator' && t.id.startsWith('es/')
);

if (!toolEntry) {
  return Astro.redirect('/es/');
}

const tool = toolEntry.data;
---

<ToolLayout tool={tool} lang={lang}>
  <MortgageCalculator client:visible defaults={tool.defaults} lang={lang} />
</ToolLayout>
