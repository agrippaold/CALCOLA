---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'es';

const tools = [
  { name: 'Calculadora Porcentaje', slug: '/es/matematicas/calculadora-porcentaje/', description: 'Cinco modos de cálculo: encuentra %, variación porcentual, aumento y disminución.' },
  { name: 'Calculadora Área', slug: '/es/matematicas/calculadora-area/', description: 'Calcula el área de rectángulos, círculos, triángulos, trapecios y elipses.' },
];
---

<BaseLayout
  title="Calculadoras Matemáticas - Porcentaje, Área y Más | CalcHub"
  description="Calculadoras matemáticas gratuitas para porcentajes, cálculo de áreas y problemas matemáticos cotidianos. Resultados instantáneos con fórmulas paso a paso."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/es/" class="hover:text-blue-600">Inicio</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">Matemáticas</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Calculadoras de Matemáticas</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      Herramientas matemáticas rápidas y fiables para cálculos cotidianos. Porcentajes, geometría y mucho más.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
