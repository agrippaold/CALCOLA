---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'ar';

const tools = [
  { name: 'حاسبة المعدل الدراسي', slug: '/ar/taalim/hasibet-muaddal-dirasi/', description: 'احسب معدلك التراكمي مع مقياس الدرجات.' },
];
---

<BaseLayout
  title="أدوات تعليمية | CalcHub"
  description="أدوات تعليمية مجانية: حاسبة المعدل الدراسي وأدوات أكاديمية للطلاب."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/ar/" class="hover:text-blue-600">الرئيسية</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">أدوات التعليم</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">أدوات التعليم</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      أدوات تعليمية مجانية: حاسبة المعدل الدراسي وأدوات أكاديمية للطلاب.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
