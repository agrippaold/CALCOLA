---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'ar';

const tools = [
  { name: 'حاسبة النسبة المئوية', slug: '/ar/riyadiyat/hasibet-nisba-miwiya/', description: 'جميع عمليات النسبة المئوية في مكان واحد.' },
  { name: 'حاسبة المساحة', slug: '/ar/riyadiyat/hasibet-masaha/', description: 'احسب مساحة المستطيل والدائرة والمثلث وأكثر.' },
  { name: 'حاسبة التغير النسبي', slug: '/ar/riyadiyat/hasibet-taghyir-nisbi/', description: 'احسب نسبة التغير بين قيمتين.' },
  { name: 'حاسبة الكسور', slug: '/ar/riyadiyat/hasibet-kusur/', description: 'جمع وطرح وضرب وقسمة الكسور.' },
  { name: 'الآلة الحاسبة العلمية', slug: '/ar/riyadiyat/hasibet-ilmiya/', description: 'حسابات علمية متقدمة مع دوال مثلثية ولوغاريتمية.' },
];
---

<BaseLayout
  title="حاسبات رياضية - النسبة المئوية والمساحة | CalcHub"
  description="حاسبات رياضية مجانية: النسبة المئوية، المساحة، الكسور، الحاسبة العلمية. نتائج فورية ودقيقة."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/ar/" class="hover:text-blue-600">الرئيسية</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">حاسبات رياضية</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">حاسبات الرياضيات والعلوم</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      حاسبات رياضية مجانية: النسبة المئوية، المساحة، الكسور، الحاسبة العلمية. نتائج فورية ودقيقة.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
