---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'ar';

const tools = [
  { name: 'عداد الكلمات', slug: '/ar/nusus/addad-kalimat/', description: 'عد الكلمات والجمل مع تقدير وقت القراءة.' },
  { name: 'عداد الأحرف', slug: '/ar/nusus/addad-huruf/', description: 'عد الأحرف مع حدود تويتر والرسائل النصية.' },
  { name: 'مولد كلمات المرور', slug: '/ar/nusus/muwalid-kalimat-sir/', description: 'أنشئ كلمات مرور قوية وعشوائية وآمنة.' },
  { name: 'مولد رمز QR', slug: '/ar/nusus/muwalid-ramz-qr/', description: 'أنشئ رموز QR لعناوين URL والنصوص والواي فاي.' },
  { name: 'فاحص قوة كلمة المرور', slug: '/ar/nusus/faphs-quwwat-kalima-sir/', description: 'قيّم قوة كلمة مرورك مع تقدير وقت الاختراق.' },
];
---

<BaseLayout
  title="أدوات النصوص والويب | CalcHub"
  description="أدوات نصوص مجانية: عداد الكلمات والأحرف، مولد كلمات المرور، رمز QR. أدوات سريعة ومجانية."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/ar/" class="hover:text-blue-600">الرئيسية</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">أدوات النصوص</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">أدوات النصوص والويب</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      أدوات نصوص مجانية: عداد الكلمات والأحرف، مولد كلمات المرور، رمز QR. أدوات سريعة ومجانية.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
