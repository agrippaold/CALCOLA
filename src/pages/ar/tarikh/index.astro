---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'ar';

const tools = [
  { name: 'حاسبة العمر', slug: '/ar/tarikh/hasibet-umr/', description: 'احسب عمرك بالسنوات والأشهر والأيام.' },
  { name: 'حاسبة فرق التواريخ', slug: '/ar/tarikh/hasibet-farq-tawarikh/', description: 'احسب الفرق بين تاريخين بالسنوات والأشهر والأيام.' },
];
---

<BaseLayout
  title="حاسبات التاريخ والوقت | CalcHub"
  description="حاسبات التاريخ والوقت المجانية: حساب العمر والفرق بين التواريخ بدقة."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/ar/" class="hover:text-blue-600">الرئيسية</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">حاسبات التاريخ</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">حاسبات التاريخ والوقت</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      حاسبات التاريخ والوقت المجانية: حساب العمر والفرق بين التواريخ بدقة.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
