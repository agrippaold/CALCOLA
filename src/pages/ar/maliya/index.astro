---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'ar';

const tools = [
  { name: 'حاسبة التمويل العقاري', slug: '/ar/maliya/hasibet-tamwil-aqari/', description: 'احسب القسط الشهري وإجمالي الفوائد للتمويل العقاري.' },
  { name: 'حاسبة الفائدة المركبة', slug: '/ar/maliya/hasibet-fawaid-murakkaba/', description: 'احسب نمو استثماراتك مع الفائدة المركبة بمرور الوقت.' },
  { name: 'حاسبة القرض', slug: '/ar/maliya/hasibet-qard/', description: 'احسب أقساط القرض الشهرية وإجمالي الفوائد المدفوعة.' },
  { name: 'حاسبة الادخار', slug: '/ar/maliya/hasibet-iddihar/', description: 'خطط لمدخراتك واحسب نمو رصيدك مع مساهمات منتظمة.' },
  { name: 'حاسبة تمويل السيارة', slug: '/ar/maliya/hasibet-tamwil-sayyara/', description: 'احسب أقساط تمويل السيارة مع الدفعة الأولى.' },
  { name: 'حاسبة الاستثمار', slug: '/ar/maliya/hasibet-istithmar/', description: 'توقع نمو استثماراتك على المدى الطويل.' },
  { name: 'حاسبة العائد على الاستثمار', slug: '/ar/maliya/hasibet-aaid-istithmar/', description: 'احسب العائد على الاستثمار ونسبة الربح.' },
  { name: 'حاسبة التضخم', slug: '/ar/maliya/hasibet-tadakhkhum/', description: 'احسب تأثير التضخم على القوة الشرائية لأموالك.' },
  { name: 'محول العملات', slug: '/ar/maliya/muhawwil-umlat/', description: 'حول بين العملات العالمية بأسعار مرجعية.' },
  { name: 'حاسبة الخصم', slug: '/ar/maliya/hasibet-khasm/', description: 'احسب السعر بعد الخصم والمبلغ الذي ستوفره.' },
  { name: 'حاسبة البقشيش', slug: '/ar/maliya/hasibet-baqshish/', description: 'احسب البقشيش المناسب وقسم الفاتورة.' },
  { name: 'حاسبة ضريبة المبيعات', slug: '/ar/maliya/hasibet-daribat-mabiat/', description: 'احسب ضريبة المبيعات والسعر الإجمالي.' },
  { name: 'حاسبة ضريبة القيمة المضافة', slug: '/ar/maliya/hasibet-qimat-mudafa/', description: 'احسب ضريبة القيمة المضافة أو استخرجها من السعر.' },
  { name: 'حاسبة الإطفاء', slug: '/ar/maliya/hasibet-itfa/', description: 'جدول إطفاء القرض مع تفاصيل كل قسط.' },
  { name: 'حاسبة التضخم التاريخي', slug: '/ar/maliya/hasibet-tadakhkhum-tarikhi/', description: 'احسب تأثير التضخم التاريخي على قيمة الأموال.' },
];
---

<BaseLayout
  title="حاسبات مالية - التمويل والقروض والاستثمار | CalcHub"
  description="حاسبات مالية مجانية: تمويل عقاري، فائدة مركبة، قروض، ادخار، استثمار. صيغ دقيقة ونتائج فورية."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/ar/" class="hover:text-blue-600">الرئيسية</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">حاسبات مالية</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">الحاسبات المالية</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      حاسبات مالية دقيقة تعتمد على صيغ رياضية موثوقة. التمويل العقاري وتمويل السيارات والفائدة المركبة والادخار والاستثمار لمساعدتك في اتخاذ قرارات مالية ذكية.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
