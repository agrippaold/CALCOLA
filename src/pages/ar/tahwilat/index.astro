---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'ar';

const tools = [
  { name: 'محول درجات الحرارة', slug: '/ar/tahwilat/muhawwil-harara/', description: 'حول بين سلسيوس وفهرنهايت وكلفن.' },
  { name: 'محول الحجم', slug: '/ar/tahwilat/muhawwil-hajm/', description: 'حول بين اللتر والجالون والأوقية وغيرها.' },
  { name: 'محول الطول', slug: '/ar/tahwilat/muhawwil-tul/', description: 'حول بين المتر والقدم والبوصة والميل.' },
  { name: 'محول الوزن', slug: '/ar/tahwilat/muhawwil-wazn/', description: 'حول بين الكيلوجرام والرطل والأوقية والطن.' },
];
---

<BaseLayout
  title="محولات الوحدات - الحرارة والطول والوزن | CalcHub"
  description="محولات وحدات مجانية: درجات الحرارة، الطول، الوزن، الحجم. تحويل فوري ودقيق بين الوحدات."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/ar/" class="hover:text-blue-600">الرئيسية</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">محولات الوحدات</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">محولات الوحدات</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      محولات وحدات مجانية: درجات الحرارة، الطول، الوزن، الحجم. تحويل فوري ودقيق بين الوحدات.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
