---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'en';

const tools = [
  { name: 'Temperature Converter', slug: '/en/conversions/temperature-converter/', description: 'Convert between Celsius, Fahrenheit, and Kelvin with reference points.' },
];
---

<BaseLayout
  title="Unit Converters - Temperature, Length, Weight | CalcHub"
  description="Free unit converters for temperature, length, weight, and volume. Convert between metric and imperial systems instantly."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/en/" class="hover:text-blue-600">Home</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">Conversions</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Unit Converters</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      Convert between units quickly and accurately. Temperature, length, weight, volume, and more.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
