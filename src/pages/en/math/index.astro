---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'en';

const tools = [
  { name: 'Percentage Calculator', slug: '/en/math/percentage-calculator/', description: 'Five percentage calculation modes: find %, percent change, increase, decrease.' },
  { name: 'Area Calculator', slug: '/en/math/area-calculator/', description: 'Calculate area for rectangles, circles, triangles, trapezoids, and ellipses.' },
];
---

<BaseLayout
  title="Math Calculators - Percentage, Area & More | CalcHub"
  description="Free math calculators for percentages, area calculations, and everyday math problems. Instant results with step-by-step formulas."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/en/" class="hover:text-blue-600">Home</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">Math</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Math Calculators</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      Quick, reliable math tools for everyday calculations. Percentages, geometry, and more.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
