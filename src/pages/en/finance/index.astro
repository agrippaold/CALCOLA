---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'en';

const tools = [
  { name: 'Mortgage Calculator', slug: '/en/finance/mortgage-calculator/', description: 'Calculate monthly mortgage payments, total interest, and compare loan terms.' },
  { name: 'Compound Interest Calculator', slug: '/en/finance/compound-interest-calculator/', description: 'See how your investments grow with compound interest over time.' },
  { name: 'Loan Calculator', slug: '/en/finance/loan-calculator/', description: 'Estimate monthly payments and total cost for personal, auto, or student loans.' },
  { name: 'Savings Calculator', slug: '/en/finance/savings-calculator/', description: 'Project your savings growth with initial deposits and monthly contributions.' },
  { name: 'Auto Loan Calculator', slug: '/en/finance/auto-loan-calculator/', description: 'Calculate car payments with down payment and trade-in value included.' },
  { name: 'Investment Calculator', slug: '/en/finance/investment-calculator/', description: 'Project investment growth with regular contributions and compound returns.' },
  { name: 'ROI Calculator', slug: '/en/finance/roi-calculator/', description: 'Calculate return on investment percentage for any expense or investment.' },
  { name: 'Inflation Calculator', slug: '/en/finance/inflation-calculator/', description: 'See how inflation erodes purchasing power and increases future costs.' },
  { name: 'Currency Converter', slug: '/en/finance/currency-converter/', description: 'Convert between 10 major world currencies with reference exchange rates.' },
  { name: 'Discount Calculator', slug: '/en/finance/discount-calculator/', description: 'Find the final price and savings for any percentage discount.' },
  { name: 'Tip Calculator', slug: '/en/finance/tip-calculator/', description: 'Calculate tip amount, total bill, and split between multiple people.' },
  { name: 'Sales Tax Calculator', slug: '/en/finance/sales-tax-calculator/', description: 'Find the tax amount and total price for any sales tax rate.' },
  { name: 'VAT Calculator', slug: '/en/finance/vat-calculator/', description: 'Add VAT to a net price or extract VAT from a gross price.' },
  { name: 'Amortization Calculator', slug: '/en/finance/amortization-calculator/', description: 'View a complete loan payment schedule with principal and interest breakdown.' },
  { name: 'Historical Inflation Calculator', slug: '/en/finance/historical-inflation-calculator/', description: 'See what money was worth in any year from 1913 to 2025 using real US CPI data.' },
];
---

<BaseLayout
  title="Finance Calculators - Mortgage, Loans, Interest | CalcHub"
  description="Free finance calculators: mortgage payments, compound interest, loan amortization, savings growth. Accurate results with no signup required."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/en/" class="hover:text-blue-600">Home</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">Finance</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Finance Calculators</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      Tools for mortgage planning, loan analysis, investment growth, and savings projections. All calculations use standard financial formulas used by banks and financial advisors.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
