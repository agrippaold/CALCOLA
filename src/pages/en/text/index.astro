---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'en';

const tools = [
  { name: 'Word Counter', slug: '/en/text/word-counter/', description: 'Count words, sentences, paragraphs, and estimate reading time.' },
  { name: 'Character Counter', slug: '/en/text/character-counter/', description: 'Count characters with and without spaces, check limits for Twitter, SMS, and more.' },
  { name: 'Password Generator', slug: '/en/text/password-generator/', description: 'Generate secure random passwords with customizable length and character types.' },
];
---

<BaseLayout
  title="Text Tools - Word Counter, Character Counter, Password | CalcHub"
  description="Free text tools: word counter, character counter, password generator. Analyze text and generate secure passwords instantly."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/en/" class="hover:text-blue-600">Home</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">Text</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Text Tools</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      Text analysis and generation tools. Count words and characters, generate secure passwords, and more.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
