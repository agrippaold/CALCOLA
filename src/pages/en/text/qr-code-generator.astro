---
import { getCollection } from 'astro:content';
import ToolLayout from '../../../layouts/ToolLayout.astro';
import QRCodeGenerator from '../../../components/calculators/text/QRCodeGenerator';

const lang = 'en';

const allTools = await getCollection('tools');
const toolEntry = allTools.find(
  (t) => t.data.id === 'qr-code-generator' && t.id.startsWith('en/')
);

if (!toolEntry) {
  return Astro.redirect('/en/');
}

const tool = toolEntry.data;
---

<ToolLayout tool={tool} lang={lang}>
  <QRCodeGenerator client:visible defaults={tool.defaults} lang={lang} />
</ToolLayout>
