---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'en';

const tools = [
  { name: 'GPA Calculator', slug: '/en/education/gpa-calculator/', description: 'Calculate your Grade Point Average from course grades and credit hours.' },
];
---

<BaseLayout
  title="Education Calculators - GPA Calculator | CalcHub"
  description="Free education calculators: GPA calculator. Calculate your grade point average with weighted credits instantly."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/en/" class="hover:text-blue-600">Home</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">Education</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Education Calculators</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      Academic tools for students and educators. Calculate GPA, track grades, and plan your academic progress.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
