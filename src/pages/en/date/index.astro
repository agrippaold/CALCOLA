---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'en';

const tools = [
  { name: 'Age Calculator', slug: '/en/date/age-calculator/', description: 'Calculate your exact age in years, months, and days with upcoming milestones.' },
  { name: 'Date Difference Calculator', slug: '/en/date/date-difference-calculator/', description: 'Find the exact time between two dates in years, months, weeks, and days.' },
];
---

<BaseLayout
  title="Date Calculators - Age, Date Difference | CalcHub"
  description="Free date calculators: age calculator, date difference. Calculate exact time spans between dates instantly."
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/en/" class="hover:text-blue-600">Home</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">Date</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Date Calculators</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      Precise date and time calculation tools. Find exact age, time spans between dates, and more.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
