---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'ja';

const tools = [
  { name: 'GPA計算', slug: '/ja/kyoiku/gpa-keisan/', description: '科目の成績と単位数からGPA（成績評価平均値）を計算します。' },
];
---

<BaseLayout
  title="教育計算ツール - GPA計算 | CalcHub"
  description="無料の教育計算ツール：GPA計算。加重単位で成績評価平均値を即座に計算。"
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/ja/" class="hover:text-blue-600">ホーム</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">教育計算ツール</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">教育計算ツール</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      学生と教育者のためのツール。GPA計算、成績管理、学業計画に活用できます。
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
