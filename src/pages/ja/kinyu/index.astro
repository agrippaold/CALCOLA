---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'ja';

const tools = [
  { name: '住宅ローン計算', slug: '/ja/kinyu/jutaku-loan-keisan/', description: '毎月の住宅ローン返済額、総利息、返済期間を計算します。' },
  { name: '複利計算', slug: '/ja/kinyu/fukuri-keisan/', description: '複利で投資がどのように成長するかをシミュレーションします。' },
  { name: 'ローン計算', slug: '/ja/kinyu/loan-keisan/', description: '個人ローン、自動車ローン、学資ローンの月々の返済額と総費用を試算します。' },
  { name: '貯金計算', slug: '/ja/kinyu/chokin-keisan/', description: '初期預金と毎月の積立で貯蓄の成長を予測します。' },
  { name: 'カーローン計算', slug: '/ja/kinyu/car-loan-keisan/', description: '頭金や下取り価格を含めた自動車ローンの返済額を計算します。' },
  { name: '投資計算', slug: '/ja/kinyu/toshi-keisan/', description: '定期的な積立と複利による投資の成長をシミュレーションします。' },
  { name: 'ROI計算', slug: '/ja/kinyu/roi-keisan/', description: 'あらゆる支出や投資の投資収益率を計算します。' },
  { name: 'インフレーション計算', slug: '/ja/kinyu/inflation-keisan/', description: 'インフレーションが購買力にどう影響するかを確認します。' },
  { name: '為替変換', slug: '/ja/kinyu/kawase-henkan/', description: '主要10通貨の参考為替レートで通貨を変換します。' },
  { name: '割引計算', slug: '/ja/kinyu/waribiki-keisan/', description: '割引率から最終価格と節約額を計算します。' },
  { name: 'チップ計算', slug: '/ja/kinyu/chip-keisan/', description: 'チップ額、合計金額、複数人での割り勘を計算します。' },
  { name: '消費税計算', slug: '/ja/kinyu/shouhizei-keisan/', description: '消費税額と税込価格を計算します。' },
  { name: '税計算', slug: '/ja/kinyu/zei-keisan/', description: '税抜価格への税の加算、または税込価格からの税抜き計算。' },
  { name: '返済計算', slug: '/ja/kinyu/hensai-keisan/', description: '元金と利息の内訳を含む完全な返済スケジュールを表示します。' },
  { name: '歴史的インフレーション計算', slug: '/ja/kinyu/rekishi-inflation-keisan/', description: '実際のCPIデータに基づき、過去のお金の価値を確認します。' },
];
---

<BaseLayout
  title="金融計算ツール - ローン・利息・投資 | CalcHub"
  description="無料の金融計算ツール：住宅ローン、複利、返済スケジュール、貯蓄。登録不要で正確な計算結果を即座に表示。"
  lang={lang}
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/ja/" class="hover:text-blue-600">ホーム</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">金融計算ツール</span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">金融計算ツール</h1>
    <p class="text-gray-600 mb-8 max-w-2xl">
      住宅ローン、貸付分析、投資成長、貯蓄予測のためのツール。銀行やファイナンシャルアドバイザーが使用する標準的な金融計算式を採用しています。
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.slug}
          class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100"
        >
          <h2 class="font-semibold text-gray-900 text-lg mb-2">{tool.name}</h2>
          <p class="text-sm text-gray-500">{tool.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
