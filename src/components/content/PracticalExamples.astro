---
import { t } from '../../i18n/utils';

interface Props {
  examples: Array<{
    title: string;
    scenario: string;
    inputs: Record<string, string | number>;
    expectedResult: string;
    explanation: string;
  }>;
  lang: string;
}

const { examples, lang } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">{t('content.examples', lang)}</h2>
  <div class="space-y-6">
    {examples.map((example) => (
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <h3 class="font-semibold text-gray-900 mb-2">{example.title}</h3>
        <p class="text-gray-600 text-sm mb-3">{example.scenario}</p>
        <div class="bg-green-50 rounded-lg p-3 mb-3">
          <p class="font-medium text-green-800">{example.expectedResult}</p>
        </div>
        <p class="text-gray-700 text-sm">{example.explanation}</p>
      </div>
    ))}
  </div>
</section>
