---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;
const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);
---

<div class="flex flex-wrap items-center gap-2 mt-6">
  <span class="text-sm text-gray-500 mr-1">Share:</span>
  <a
    href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="px-3 py-1.5 text-xs font-medium rounded bg-gray-100 hover:bg-blue-100 text-gray-700 hover:text-blue-700 transition-colors"
    aria-label="Share on Twitter"
  >
    Twitter
  </a>
  <a
    href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="px-3 py-1.5 text-xs font-medium rounded bg-gray-100 hover:bg-blue-100 text-gray-700 hover:text-blue-700 transition-colors"
    aria-label="Share on LinkedIn"
  >
    LinkedIn
  </a>
  <a
    href={`https://wa.me/?text=${encodedTitle}%20${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="px-3 py-1.5 text-xs font-medium rounded bg-gray-100 hover:bg-green-100 text-gray-700 hover:text-green-700 transition-colors"
    aria-label="Share on WhatsApp"
  >
    WhatsApp
  </a>
  <button
    data-copy-url={url}
    onclick="const btn=this;navigator.clipboard.writeText(btn.dataset.copyUrl).then(()=>{btn.textContent='Copied!';setTimeout(()=>btn.textContent='Copy Link',2000)})"
    class="px-3 py-1.5 text-xs font-medium rounded bg-gray-100 hover:bg-gray-200 text-gray-700 transition-colors"
    aria-label="Copy link to clipboard"
  >
    Copy Link
  </button>
</div>
