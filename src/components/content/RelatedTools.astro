---
import { t } from '../../i18n/utils';

interface Props {
  tools: string[];
  lang: string;
}

const { tools, lang } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-4">{t('content.relatedTools', lang)}</h2>
  <div class="flex flex-wrap gap-3">
    {tools.map((toolSlug) => {
      const displayName = toolSlug
        .split('-')
        .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
        .join(' ');
      return (
        <a
          href={`/${lang}/health/${toolSlug}/`}
          class="inline-flex items-center gap-1 px-4 py-2 bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100 text-sm font-medium transition-colors"
        >
          {displayName}
        </a>
      );
    })}
  </div>
</section>
